<Window x:Class="Ion.Tools.Random.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:Ion.Tools;assembly=Ion.Tools" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Ion.Tools.Random"
    xmlns:text="clr-namespace:Ion.Text;assembly=Ion"
    mc:Ignorable="d"
    MaxHeight="720"
    Title="Random" 
    ResizeMode="NoResize"
    SizeToContent="Height"
    Width="540"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">
    <Grid Margin="8px">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0">Characters</Label>
        <Label Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="Ambiguous" 
                    IsChecked="{Binding Ambiguous, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,10,0"/>
                <CheckBox Content="Lower" 
                    IsChecked="{Binding Lower, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,10,0"/>
                <CheckBox Content="Numbers" 
                    IsChecked="{Binding Numbers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,10,0"/>
                <CheckBox Content="Special" 
                    IsChecked="{Binding Special, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,10,0"/>
                <CheckBox Content="Upper"
                    IsChecked="{Binding Upper, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Label>

        <Label Grid.Row="2">Length minimum</Label>
        <TextBox Grid.Row="3" Text="{Binding LengthMinimum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="4">Length maximum</Label>
        <TextBox Grid.Row="5" Text="{Binding LengthMaximum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="6">Minimum numbers</Label>
        <TextBox Grid.Row="7" Text="{Binding MinimumNumbers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="8">Minimum special</Label>
        <TextBox Grid.Row="9" Text="{Binding MinimumSpecial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="10">Result</Label>
        <Grid Grid.Row="11">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="11"
                IsReadOnly="True" 
                Text="{Binding Text, Mode=OneWay}"
                TextAlignment="Left"/>
            <i:Image Grid.Column="1"
                Cursor="Hand" 
                Foreground="#AAA"
                Margin="8px 0 0 0"
                MouseDown="onCopy"
                Source="pack://application:,,,/Ion.Tools.Random;component/Image/Copy.png"
                SourceSize="16,16"
                ToolTip="Copy"/>
        </Grid>

        <Button Grid.Row="12" Content="Do"
            Click="onDo"
            Margin="0,10,0,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
